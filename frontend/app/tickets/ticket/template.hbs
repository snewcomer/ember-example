<article class="main">
  <div class="form">
    <header>
      <button {{action "save"}} />
    </header>
    <section class="docSection container-fluid">
      <div class="row">
        <div class="col-md-12">
          <section style="padding-bottom: 0">
            <div class="row card-title">
                {{tickets/ticket-status-tag item=model}}
              <div class="col-md-12 request-wrap">
                <div class="input-group">
                  <span class="input-group-addon">{{t "ticket.label.request"}}</span>
                  {{validated-input
                    model=model
                    placeholder=(t "ticket.label.request")
                    valuePath="request"
                    className="form-control t-ticket-request ticket-request"
                    didValidate=didValidate
                    textarea=true
                    class="t-ticket-request-validator"
                  }}
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </section>
  </div>
</article>
